{
  "manifest_version": 3,
  "author": "fishisnow",
  "name": "Midscene Browser",
  "description": "一个 AI 驱动的 Web 自动化工具",
  "version": "0.0.1",
  "action": {
    "default_icon": {
      "128": "icons/logo.png"
    }
  },
  "side_panel": {
    "default_path": "./index.html"
  },
  "icons": {
    "128": "icons/logo.png"
  },
  "permissions": [
    "tabs",
    "activeTab",
    "sidePanel",
    "debugger"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "scripts/worker.js",
    "type": "module"
  }
}